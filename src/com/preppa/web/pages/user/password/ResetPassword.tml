<html t:type="layout"  t:pageTitle="Activate" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<div id ="newuser" t:type="ck/RoundCornerContainer" fgcolor="#4186D3"
    bgcolor="#FFFFFF"
    style="padding: 20px;" align="center">
<div style="padding: 20px; background-color:#e8eefa;" >
  <t:form t:id="userform">
      <t:errors />
      <table id="userformtable">
           <tr>
                     <td valign="top" align="left">
           <t:label for="femail"> Enter the email address you used for registering your account. </t:label>

                     </td>
                 </tr>
                 <tr>
                   <td>
                     <input t:type="TextField" t:id="femail" size="30"  t:value="femail" t:label="Email Address" t:validate="required"/>
                   </td>
                  </tr>
                    <tr>
                      <td colspan="2" align="left">
                          <br />
                        <input type="submit" value="Submit"/>
                    </td>
                    <td alight="left">
                        <br />
                         <input type="button"  onclick="window.location='Index'; return false;" value="Cancel"></input>
                    </td>

                 </tr>

      </table>
  </t:form>

</div>
</div>
</html>
