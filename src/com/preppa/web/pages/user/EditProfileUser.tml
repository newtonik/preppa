<html t:type="layout" t:pageTitle="Edit Profile" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
        <br />
    <div class="mainclass">
    <t:form t:id="profileform">
        About Me: <br /><input type="text" t:type="TextArea" t:id="aboutme" t:value="aboutme" t:label="About Me" t:validate="required" rows="4" cols="80"/>
        <br />
        Activities: <br /><input type="text" t:type="TextArea" t:id="activities" t:value="activities" t:label="Activities" t:validate="required" rows="4" cols="80"/>
        <br />
        Interests: <br /><input type="text" t:type="TextArea" t:id="interests" t:value="interests" t:label="Interests" t:validate="required" rows="4" cols="80"/>
        <br />
        <input type="submit" value="Submit"/>
        <input type="button" onclick="javascript:history.go(-1);" value="Cancel"></input>
    </t:form>
    </div>
        <br />
</html>