<html t:type="layout" t:pageTitle="Preppa Home" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<head>

</head>

       <h2>
            <t:if t:test="userExists">
                       Welcome to Preppa ${user.firstname}!
                <t:parameter name="else">
                           Welcome to Preppa
                    </t:parameter>
            </t:if>
        </h2>

	<div id="shadow-container">
	<div class="shadow1">
	<div class="shadow2">
	<div class="shadow3">
	<div class="container">
        <div align="center"><h3>Anouncements</h3></div>
        </div></div></div></div></div><br/>

   <t:loop t:source="Announcements" t:value="announcement">
    <div class="announcement">
	<div id="shadow-container">
	<div class="shadow1">
	<div class="shadow2">
	<div class="shadow3">
	<div class="container">
            <div align="left"><h4>${announcement.title}</h4></div>
            <t:outputraw t:value="${announcement.message}"/>
            <b>Created at ${announcement.createdat}</b>
    </div></div></div></div></div>
            <br></br>
    </div>
    </t:loop>


        <br/>
    <div id ="newuser" t:type="ck/RoundCornerContainer" fgcolor="#4186D3"
        bgcolor="#FFFFFF"
        style="padding: 20px;" align="center">
    <div style="border-width: 2px; border-style: solid; border-color: #4186D3;padding: 20px;background-color:#e8eefa;" >
        <h3>
        Latest Blog Post
        </h3>
        <t:outputraw t:value="${webpage}"/>

    </div>
    </div>
        <br/>

</html>