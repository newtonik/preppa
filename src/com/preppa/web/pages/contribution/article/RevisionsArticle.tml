<html t:type="layout" t:pageTitle="All revisions for ${article.title}" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <div>
        <t:loop t:source="revisions" t:value="revision">
            <a href="#" t:type="pagelink" t:context="${article.id}/${revision}" t:page="contribution/article/revision"> ${revision} </a>
            <br />
        </t:loop>
    </div>

</html>