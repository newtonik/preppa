<html t:type="layout" t:pageTitle="New Article" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
        <br/>
        <br />
      <div id ="artcont" align="center">
          <t:form t:id="articleform">
              <t:errors/>
             <table id="articleformtable" width="700">
                 <tr>
                     <td align="right">
                         <label for="testsubject"> Test Subject: </label>
                     </td>
                     <td align="left">
                      <table>
                      <tr>
                       
                     
                     <td align="left">
                            <select t:id="testsubject" t:type="ck/BeanSelect"
                            list="testsubjects"
                            labelField="literal:name"
                            valueField="literal:id"
                            value="testsubject"
                            t:label="Section"/>
                    </td>
                     
                     <td align="right">
                         <t:label for="autoComplete"> Topics: </t:label>
                     </td>

                      <td align="left">
                        <input t:type="ck/prototype_ui/AutoComplete" t:id="autoComplete" selected="addedTopics"
                        translate="prop:translator" label="name" type="text" size="10" readonly="true"/>
                         </td>
                         </tr>
                      </table>
                     </td>
                  </tr>
                  <tr  align="left">
                        <td align="right">
                       <t:label for="fTitle"> Title: </t:label>
                       </td>
                       <td align="left">
                      <input t:type="TextField" t:id="fTitle"  t:value="fTitle" t:label="Title" t:validate="required"/>
                      </td>
                      <td>
                          <input t:id="inplacetopic" />
                      </td>

                 </tr>
                
                 <tr>
                       <td valign="top" align="right">
                           <t:label for="body">Article: </t:label>
                        </td>
                           <td >
                          <t:editor align="left" t:id="body" value="fBody" t:toolbarSet="Basic" t:width="600" t:height="300"
                          t:label="Body" t:validate="required" />

                     </td>
                 </tr>
                   <tr>

                        <td valign="top" align="right">
                             <t:label for="fSource"> Sources: </t:label>
                        </td>
                        <td align="left">
                          <input t:type="TextArea" t:id="fSource" value="fSource" rows="4" cols="50"/>

                     </td>
                 </tr>
                   <tr>
                     <td align="right">
                         <t:label for="fTag"> Tags: </t:label>
                      </td>
                      <td align="left">
                          <input t:type="TextField" t:id="fTag" value="fTag" width="80"/>

                     </td>
                 </tr>
                  <tr>

                      <td colspan="2" align="left">
                          <br />
                        <input type="submit" value="Submit"/>
                        <input type="button"  onclick="window.location='Index'; return false;" value="Cancel"></input>
                    </td>

                 </tr>
                 
             </table>
             </t:form>
    </div>
   

    


</html>