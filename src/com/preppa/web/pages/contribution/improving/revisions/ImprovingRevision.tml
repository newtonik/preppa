<html t:type="layout" t:pageTitle="Improving Question Revision" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <body>
    <br />
    <div class="mainclass">
        <div class="panes">

        <div t:type="question/improvingtab" t:question="improving" />

            <br />
            <br />
            <h2>
                ${improving.title}
            </h2>
            <div class="author-time">
                Last updated <t:output format="literal:MMM. dd, yyyy h:mm a" value="improving.createdAt" />
            </div>
            <p>
            <t:outputraw t:value="${improving.paragraph}"/>
            </p>


            <p>
            <t:tagview t:alltags="improving.taglist" />
            <br />
            </p>
            <br/>
            <a id="addquestion"  href="#"> Add Question</a>



        </div>

    </div>
    <br/>
    </body>
</html>