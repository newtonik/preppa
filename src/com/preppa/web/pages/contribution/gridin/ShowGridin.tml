<html t:type="layout" t:pageTitle="${question.title}" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <div id="main">
        <h3>  ${question.title} </h3>
        <div align="center">
            <t:if t:test="${question.image}">
                <img src="/preppa/images/gridin${question.id}.jpg" align="top" width="400" height="300"/>

                <t:parameter name ="else">
                    <b>No Image </b>
                </t:parameter>
            </t:if>
        </div>
        <div id="qridinbody">
            <p>
            <t:outputraw t:value="${question.question}" />
            <br />
            <br />
            <t:tagview t:alltags="tags" />
            <br />
            </p>

        </div>

        <br />
        <br />
        <div id="voteseal" t:type="voteseal" t:contentid="${question.id}" t:contenttype="contType" t:votes="${question.rating}" />
        <br />
        <br />
        <div id="gridinanswer" align="left" >
            <h4>Answer</h4>
            <p>

                <b>If Single Answer</b>
                ${answer.answer}
                <br />
                <b>If Range Answer</b>
                High: ${answer.highanswer}
                Low: ${answer.lowanswer}
            </p>
            <h4>Explanation</h4>
            <p>
                ${answer.description}
            </p>
        </div>


        <br />

        <p>
            <a href="#" t:type="pagelink" t:page="contribution/gridin/edit" t:context="${question.id}" > Edit </a>
        </p>



        <div>
            <t:zone t:id="voteupZone">

                <t:block t:id="voteBlock">

                </t:block>
                <b> ${votes} Stars</b>
                <br />
                <a href="#" t:type="actionlink" t:id="voteup" t:zone="voteupZone" onclick="javascript:Tapestry.waitForPage(event);">
                    Vote Up </a>
                <br />
                <a href="#" t:type="actionlink" t:id="votedown" t:zone="voteupZone" onclick="javascript:Tapestry.waitForPage(event);">
                    Vote Down </a>
            </t:zone>
        </div>

        <t:block t:id="upsuccess">
            <b> ${votes} Stars</b>
            <br />
            You Voted Up
        </t:block>
        <t:block t:id="downsuccess">
            <b> ${votes} Stars</b>
            <br />
            You Voted Down
        </t:block>
        <t:block t:id="voted">
            <b> ${votes} Stars</b>
            <br />
            You have already voted.
        </t:block>
    </div>
</html>