<html t:type ="layout" t:pageTitle="Question" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<t:practicebarart />
    <div id="main">
                <t:pagelink t:page="contribution/question/approve/index"><b>Approved</b></t:pagelink> - <t:pagelink t:page="contribution/question/approve/view" t:context="${qType}">${qType}</t:pagelink> - Show Question
    <div t:id="showquestion" t:question="question">
    </div>


        <div>
            <t:zone t:id="voteupZone">

            <t:block t:id="voteBlock">

            </t:block>
                <b> ${votes} Stars</b>
              <br />
            <a href="#" t:type="actionlink" t:id="voteup" t:zone="voteupZone" onclick="javascript:Tapestry.waitForPage(event);">
                Vote Up </a>
            <br />
            <a href="#" t:type="actionlink" t:id="votedown" t:zone="voteupZone" onclick="javascript:Tapestry.waitForPage(event);">
                Vote Down </a>
            </t:zone>
        </div>

    <t:block t:id="upsuccess">
        <b> ${votes} Stars</b>
        <br />
        You Voted Up
    </t:block>
    <t:block t:id="downsuccess">
        <b> ${votes} Stars</b>
        <br />
        You Voted Down
    </t:block>
    <t:block t:id="voted">
     <b> ${votes} Stars</b>
        <br />
       You have already voted.
    </t:block>
    </div>
</html>