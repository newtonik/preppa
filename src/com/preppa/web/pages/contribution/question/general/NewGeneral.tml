<html t:type="layout" t:pageTitle="Create New question" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <h3> Contribute a Question </h3>
    <div id="main">
        <t:zone t:id="questionzone">
            <t:form t:id="wizardform" t:zone="questionzone">
                <table id="atable" cellpadding="10">
                    <tr>
                        <td align="left">
                    <t:label for="testSubSelect"> Select a Testsubject </t:label>
                    <br />
                    <input t:id="testSubSelect"  model="testsubjectsSelectionModel" encoder="testsubjectsValueEncoder" onchange="IGNORE_UNLOAD = false" onkeypress="IGNORE_UNLOAD = false" />
                    </td>
                    <td align="right" >
                    <t:label for="QuestiontypeSelect"> Select a Testsubject </t:label>
                    <br />
                    <input t:id="QuestiontypeSelect"  model="questiontypesSelectionModel" encoder="questiontypesValueEncoder"/>
                    </td>
                    <td></td>
                    <td></td>
                    </tr>
                </table>


            </t:form>
        </t:zone>
            <div t:type="newtag" />
        
        <div id="shortpassage" class="questiontype" align="center" style='display:none'>
            <div align="center" t:id="newshortpassage" />
        </div>
        <div id="shortdualpassage"  class="questiontype" align="center" style='display:none'>
            <div align="center" t:id="newshortdualpassage" />
        </div>
        <div id="longpassage"  class="questiontype" align="center" style='display:none'>
            <div t:id="newlongpassage" />
            <br />
        </div>
        <div id="longdualpassage"  class="questiontype" align="center" style='display:none'>
            <div t:id="newlongdualpassage" />
            <br />
        </div>
        <div id="multichoice" class="questiontype" align="center" style='display:none'>
            <div t:id="aquestion" t:hasquestiontype="true"></div>
        </div>
            <div id="gridin" class="questiontype" align="center" style='display:none'>
            <div t:id="newgridin" />
        </div>
        <div  class="questiontype" align="center" style='display:none'>
            <div t:id="firstquestion" t:testsubjects="subjects" t:qtype="questiontype" t:hasquestiontype="true"/>
        </div>

    
    <div id="newtagbox" class="tagboxklass" style='display:none'>
        <div t:type="ck/RoundCornerContainer" fgcolor="#4186D3"
             bgcolor="#FFFFFF"
             style="padding: 20px;" align="center">
            <div id="tagcorner" style="padding: 20px; background-color:#e8eefa;" class="tagcornerclass">

                <t:zone t:id="formzone">
                    <t:delegate to="newtagblock"/>
                </t:zone>

                <p>
                    <a href="#" t:type="actionlink" t:id="closetag" t:zone="formzone" class="closetagbox">Close</a>
                </p>
            </div>
        </div>

    </div>

    <t:block t:id="newtagblock">
        <h3> Add a Tag </h3>
        <t:form t:id="tagform" t:zone="formzone">

            <table id="userformtable">
                <tr>
                    <td>
                <t:label for="tagTextfield"/>
                </td>
                </tr>
                <tr>
                    <td valign="top" align="left">
                        <input t:type="TextField" t:id="tagTextfield" size="30"  t:value="fname" t:label="Tag Name" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="left">
                        <br />
                        <input t:id="submit" type="submit" t:type="submit" value="Submit"/>
                    </td>
                </tr>


            </table>


        </t:form>
    </t:block>
            </div>
</html>