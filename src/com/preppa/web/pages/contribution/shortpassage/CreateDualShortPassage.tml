<html t:type="layout" t:pageTitle="New Short Dual Passage" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <div id="dualpassage">
        <t:form t:id="dualpassageform">
            <t:errors />
            <table id="dualpasstable">

                <tr align="left">
                    <td align="right">
                <t:label for="fTitle"> Title: </t:label>
                </td>
                <td align="left">
                    <input t:type="TextField" t:id="fTitle"  t:value="fTitle" t:validate="required" t:label="Title" size="60"/>
                </td>
                </tr>
                <tr>
                <div id="pass1">
                    <td valign="top" align="right">
                    <t:label for="passeditorone">Passage 1: </t:label>
                    </td>
                    <td >
                    <t:editor align="left" t:id="passeditorone" value="fBodyone" t:validate="required" t:label="Passage 1" t:toolbarSet="Basic" t:width="600" t:height="300"/>
                    </td>
                </div>
                </tr>
                 <tr>
                     <td></td>
                    <td><b> Word Count</b></td>
                </tr>
                <tr>
                    <td></td>
                    <td id="word_count"></td>
                </tr>
                <tr>
                <div id="pass2">
                    <td valign="top" align="right">
                    <t:label for="passeditortwo">Passage 2: </t:label>
                    </td>
                    <td >
                    <t:editor align="left" t:id="passeditortwo" value="fBodytwo" t:toolbarSet="Basic" t:label="Passage 1" t:validate="required" t:width="600" t:height="300"/>
                    </td>
                </div>
                </tr>
                  <tr>
                     <td></td>
                    <td><b> Word Count</b></td>
                </tr>
                <tr>
                    <td></td>
                    <td id="word_count2"></td>
                </tr>
                <tr>

                    <td valign="top" align="right">
                <t:label for="fSource"> Sources: </t:label>
                </td>
                <td>
                    <input t:type="TextArea" t:id="fSource" value="fSource" rows="3" cols="70"/>

                </td>
                </tr>
                <tr>
                    <td></td>
                    <td align="left">
                <t:label for="autoCompletetag"> Tags (Select up to 5 tags) </t:label>
                </td>
                </tr>
                <tr>
                    <td></td>
                    <td align="left">
                        <input t:type="ck/prototype_ui/AutoComplete" t:id="autoCompletetag" selected="addedTags"
                               translate="prop:tagtranslator" label="name" type="text" size="10" />
                    </td>

                </tr>
                <tr>
                    <td></td>
                    <td align="left">
                        Can't find one
                        <a  id="addtag" href="#" > Add a New Tag </a>
                    </td>
                <br />
                </tr>
                <tr>
                    <td></td>
                    <td colspan="2" align="left">
                        <input type="image" src="${asset:context:/images/layout/submit-submit.jpg}" height="50" width="125" value="Submit" onclick="IGNORE_UNLOAD = true" />
                        <input type="image" src="${asset:context:/images/layout/submit-cancel.jpg}" height="50" width="125" onclick="javascript:history.go(-1);" value="Cancel"></input>
                    </td>

                </tr>

            </table>
        </t:form>
    </div>

    <div id="newtagbox" class="tagboxklass" style='display:none'>
        <div t:type="ck/RoundCornerContainer" fgcolor="#4186D3"
             bgcolor="#FFFFFF"
             style="padding: 20px;" align="center">
            <div id="tagcorner" style="padding: 20px; background-color:#e8eefa;" >

                <t:zone t:id="formzone">
                    <t:delegate to="newtagblock"/>
                </t:zone>

                <p>
                    <a href="#" t:type="actionlink" t:id="closetag" t:zone="formzone" id="closetagbox">Close</a>
                </p>
            </div>
        </div>

    </div>
    <t:block t:id="newtagblock">
        <h3> Add a Tag </h3>
        <t:form t:id="tagform" t:zone="formzone">

            <table id="userformtable">
                <tr>
                    <td>
                <t:label for="tagTextfield"/>
                </td>
                </tr>
                <tr>
                    <td valign="top" align="left">
                        <input t:type="TextField" t:id="tagTextfield" size="30"  t:value="fname" t:label="Tag Name" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="left">
                        <br />
                        <input t:id="submit" type="submit" t:type="submit" value="Submit"/>
                    </td>
                </tr>


            </table>


        </t:form>
    </t:block>
</html>