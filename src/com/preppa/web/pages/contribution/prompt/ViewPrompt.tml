<html t:type="layout" t:pageTitle="Prompts" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <t:practicebarArt />
    <div id="main">

                <br/><t:pagelink t:page="contribution/prompt/index">Free Response Home</t:pagelink> - <b>${type}</b><br/>
<t:promptmenu />
<div id="nav-menu" align="left">
    <ul>
            <li><t:pagelink t:page="contribution/prompt/view" t:context="literal:Respond" style="height: 3em; line-height: 1.5em;">Respond to Statement</t:pagelink></li>
            <li><t:pagelink t:page="contribution/prompt/view" t:context="literal:Choosing" style="height: 3em; line-height: 1.5em;">Choosing Between Contrasting Statements</t:pagelink></li>
