<html t:type="layout" t:pageTitle="New Passage" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <tags>
          <t:beaneditform t:id="passage" align ="left"  submitLabel="Create Passage">
              <t:errors/>
                <t:parameter name="title">
                <t:label for="title"/>
                 <t:textfield t:id="title" value="article.title" size="60"/>
                </t:parameter>
                 <t:parameter name="tags">
                <t:label for="tags"/>
                 <t:textarea t:id="tags" value="article.tags" rows="4" cols="40"/>
                </t:parameter>

                <t:parameter name="sources">
                <t:label for="sources"/>
                 <t:textarea t:id="sources" value="article.sources" rows="4" cols="40"/>
                </t:parameter>

                <t:parameter name="body">
                <t:label for="body"/>
                <t:editor t:id="body" value="article.body" t:validate="required" t:toolbarSet="Basic" t:width="400" t:height="600"/>
                </t:parameter>
               
          </t:beaneditform>
 
    </tags>


</html>