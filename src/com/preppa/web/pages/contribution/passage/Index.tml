<html t:type="layout" t:pageTitle="Passage" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <h2>Passages</h2>

    <div class="completed">
        <h3>Completed Passages</h3>

        <strong>Passages</strong>
        <table>
        <tr t:type="loop" t:source="longpassages" t:value="longpassage">
            <td>
                <a href="#" t:type="pagelink" t:page="contribution/passage/show" t:context="longpassage.id"> ${longpassage.title} </a>
            </td>

        </tr>
        </table>
        <strong>Dual Passages</strong>
          <table>
        <tr t:type="loop" t:source="longdualpassages" t:value="longdualpassage">
            <td>
                <a href="#" t:type="pagelink" t:page="contribution/passage/showdual" t:context="longdualpassage.id"> ${longdualpassage.title} </a>
            </td>

        </tr>
        </table>

    </div>

    <div id="notcompleted">
        <h3>Almost there</h3>
        <strong>Passages</strong>

        <strong>Dual Passages</strong>
    </div>
</html>
