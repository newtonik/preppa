<html t:type="layout" t:pageTitle="New Passage" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

    <tags>
          <t:beaneditform t:id="longpassage" align ="left"  submitLabel="Save">
              
               <t:parameter name="sources">
                <t:label for="sources"/>
                 <t:textarea t:id="sources" value="longpassage.sources" rows="4" cols="50"/>
                </t:parameter>

                
                

          </t:beaneditform>
            <input t:type="text" t:value="body"/>
            <t:label for="body"/>
            <t:editor t:id="passeditor" value="body" t:validate="required" t:toolbarSet="Basic" t:width="400" t:height="400"/>
            
    </tags>


</html>