<html t:type="layout" t:pageTitle="Create Practice Set" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <t:practicebarArt />
    <div class="mainclass">
        <h2>Create Practice Set</h2>

        <div>
            <div id="practiceleft">
                <div t:type="ck/RoundCornerContainer" fgcolor="#4186D3"
                     bgcolor="#FFFFFF"
                     style="padding: 20px;" align="center">
                    <div class="practicebox" style="padding: 20px;">
                        <t:form t:id="practicesetupform" clientvalidation="false">
                            <div id="accordion">
                                <h2>Choose By Topics</h2>
                                <h3>Preferences</h3>

                                <div class="pane">
                                    <t:errors />
                                    <t:label for="randomsubjects"><t:checkbox t:id="randomsubjects" value="pset.randomsubjects"/>  QuickPick </t:label>
                                    <t:label for="addmathcheck"><t:checkbox t:id="addmathcheck" value="pset.math"/>  Math</t:label>
                                    <t:label for="addwritingcheck"><t:checkbox t:id="addwritingcheck" value="pset.writing"/>  Writing </t:label>
                                    <t:label for="addcriticalcheck"><t:checkbox t:id="addcriticalcheck" value="pset.reading" />  Critical Reading</t:label>
                                    
                                    <t:label for="numberofq"> <t:select t:id="numberofq" model="message:numberoptions-message" value="pset.numofquestions" /> Number of Questions</t:label>


                                </div>
                                <h3>Math</h3>
                                <div class="pane">mathematics section
                                    <div id="mathpracticedetails">
                                        <table>
                                            <tr>
                                                <td align="left">
                                                    <t:label for="multichoicecheck"><t:checkbox t:id="multichoicecheck" value="pset.multichoice"/>  Multiple Choice </t:label>

                                                </td>
                                                <td align="left">
                                                     <t:label for="multinumberofq"> <t:select t:id="multinumberofq" model="message:subnumberoptions-message" value="pset.multinum" /> Number of Questions</t:label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                <t:label for="gridincheck"><t:checkbox t:id="gridincheck" value="pset.gridin"/>  Gridin </t:label>
                                                </td>
                                                <td align="left">
                                                     <t:label for="gridinnumberofq"> <t:select t:id="gridinnumberofq" model="message:subnumberoptions-message" value="pset.gridinnum" /> Number of Questions</t:label>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div id="mathtopicsdetails">
                                        <h4>Topics</h4>
                                        <table>
                                            <tr>
                                            <th>
                                                Multiple Choice
                                            </th>
                                            <th>
                                                Grid-Ins
                                            </th>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                  </td>
                                                 <td align="left">

                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">

                                                </td>
                                                 <td align="left">

                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">

                                                </td>
                                                 <td align="left">

                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">

                                                </td>
                                                 <td align="left">

                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">

                                                </td>
                                                 <td align="left">

                                                </td>
                                            </tr>

                                        </table>
                                    </div>


                                </div>
                                <h3>Critical Reading</h3>
                                <div class="pane">
                                    <div id="criticalpracticedetails">
                                        <h4>Question Types</h4>
                                         <table>
                                            <tr>
                                                <td align="left">
                                                <t:label for="shortpasscheck"><t:checkbox t:id="shortpasscheck" value="pset.shortpassage"/>  Short Passages </t:label>
                                                  </td>
                                                 <td align="left">
                                                  <t:label for="shortpassnumberofq"> <t:select t:id="shortpassnumberofq" model="message:subnumberoptions-message" value="pset.shortpassnum" /> Number of Passages</t:label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                <t:label for="shortdualpasscheck"><t:checkbox t:id="shortdualpasscheck" value="pset.shortdualpassage"/>  Short Dual Passages </t:label>
                                                </td>
                                                 <td align="left">
                                                    <t:label for="shortdualpassnumberofq"> <t:select t:id="shortdualpassnumberofq" model="message:subnumberoptions-message" value="pset.shortdualpassnum" /> Number of Passages</t:label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                <t:label for="longpasscheck"><t:checkbox t:id="longpasscheck" value="pset.longpassage"/> Long Passages </t:label>
                                                </td>
                                                 <td align="left">
                                                <t:label for="longpassnumberofq"> <t:select t:id="longpassnumberofq" model="message:subnumberoptions-message" value="pset.longpassnum" /> Number of Passages</t:label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                <t:label for="longdualpasscheck"><t:checkbox t:id="longdualpasscheck" value="pset.longdualpassage"/>  Long Dual Passages </t:label>
                                                </td>
                                                 <td align="left">
                                                    <t:label for="longdualpassnumberofq"> <t:select t:id="longdualpassnumberofq" model="message:subnumberoptions-message" value="pset.longdualpassnum" /> Number of Passages</t:label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td align="left">
                                                <t:label for="sentencecompcheck"><t:checkbox t:id="sentencecompcheck" value="pset.sentencecompletion"/>  Sentence Completion </t:label>
                                                </td>
                                                 <td align="left">
                                                  <t:label for="sentcompnumberofq"> <t:select t:id="sentcompnumberofq" model="message:subnumberoptions-message" value="pset.sentcompnum" /> Number of Questions</t:label>
                                                </td>
                                            </tr>

                                        </table>

                                    </div>
                                </div>
                                <h3>Writing</h3>
                                <div class="pane">writing section
                                <div id="writingpracticedetails">
                                </div>
                                </div>

                            </div>
                             <input type="submit" value="Submit" onclick="IGNORE_UNLOAD = true" />
                        </t:form>
                    </div>

                </div>
            </div>

        </div>

    </div>

</html>